{
  "name": "resume-tailor-system",
  "version": "1.0.0",
  "description": "Resume Tailoring System Monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "worker"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:worker": "npm run dev --workspace=worker",
    "start": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:worker\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
